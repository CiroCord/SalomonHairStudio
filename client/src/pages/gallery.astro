---
import Layout from '../layouts/Layout.astro';
import HomeGallery from '../components/react/HomeGallery.jsx';
---

<Layout title="Galería - Salomon Hair Studio">
    <div class="bg-zinc-900 py-16 mb-12">
        <div class="container mx-auto px-4 text-center">
            <h1 class="text-4xl md:text-5xl font-serif font-bold text-yellow-500 mb-4 tracking-wider">GALERÍA</h1>
            <p class="text-gray-400 max-w-2xl mx-auto text-lg">Explora nuestra colección de estilos y transformaciones.</p>
        </div>
    </div>
    
    <div class="container mx-auto px-4 pb-20">
        <HomeGallery client:load />
    </div>
</Layout>